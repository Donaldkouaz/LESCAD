{% extends "lescadplatformeBundle::layout.html.twig" %}

{% block titre %}
    {{ formation.nom|upper }} - {{ parent() }}
{% endblock %}
{% block css %} 
    {{ parent()}} <link href="{{asset('bundles/lescadplatforme/css/formations.css')}}" rel="stylesheet">
{% endblock %}

{% block lescadplatforme_body %}
    <div class="container-fluid">

        <div class="row">

            <div class="col-md-3 col-sm-4 prin">

                {% include "lescadplatformeBundle:plateforme:formations_categories.html.twig" %}

                {% block userleft %}
                {% endblock userleft %}
            </div>


            <div class="col-sm-8 col-md-6 prin">
                {#<h2 class="title">Parcourez toutes nos formations</h2>#}




                {% if formation is null %}
                    <h1>Il n'y a aucune formation dans cette categorie pour le moment</h1>
                {% else %}


                {% endif %}

                <div class="row">
                    <div class="col-md-12">
                        <div class="well">
                            <h1 class="text-center"><b>{{ formation.nom|upper }}</b></h1><hr/>

                            <p><h2>Description</h2><br/>{{ formation.description }}</p>
                            <p><h2>Durée</h2><br/> Cette formation durera : {{ formation.dureereel }}.</p>
                            <p><h2>Matières</h2><br/>
                            {% for matiere in formation.matieres %}
                                <h3>{{ matiere.nom }} ({{ matiere.duree }} heures)</h3><br/>
                                <p>{{ matiere.description }}</p>
                            {% endfor %}</p>
                            <p><h2>Pré-réquis</h2><br/>{{ formation.prerequis }}</p>
                            <p><h2>Cout</h2><br/> Le cout de cette formation est de : {{ formation.cout }}</p>
                            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                <div class="more label"><a href="{{ path('admin_lescad_platforme_formation_edit', { 'id': formation.id }) }}">Modifier</a></div> 
                            {% endif %}
                        </div>
                    </div>
                </div>

            </div>


            <div class="col-md-3 hidden-sm hidden-xs  prin">
                <div class="well">
                    <div class="page- text-center">

                        {% if app.request.hasPreviousSession %}
                            {% for type, messages in app.session.flashbag.all() %}
                                {% for message in messages %}
                                    <div class="flash-{{ type }}">
                                        <h3> {{ message }}</h3><hr/>
                                    </div>
                                {% endfor %}
                            {% endfor %}
                        {% endif %}

                        <h4> Demander cette formation </h4>
                    </div>
                    {{ form(form) }}

                </div>
            </div>

        </div>
    </div>
{% endblock %}
