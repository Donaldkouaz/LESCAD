
{% if nbrePages>1 %}
		<div class="well">		 
		<ul class="pagination">
  {# On utilise la fonction range(a, b) qui crée un tableau de valeurs entre a et b #}
  {% for p in range(1, nbrePages) %}
    <li{% if p == page %} class="active"{% endif %}>
      <a href="{{ path('lescadplatforme_formations', {'page': p}) }}">{{ p }}</a>
    </li>
  {% endfor %}
</ul>
 </div>
 {% endif %}