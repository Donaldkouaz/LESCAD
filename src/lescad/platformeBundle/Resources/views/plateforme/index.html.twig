{% extends "lescadplatformeBundle::layout.html.twig" %}

{% block titre %}
    Accueil - {{ parent() }}
{% endblock %}

{% block css %} 
    {{ parent()}} 
    <link href="{{asset('bundles/lescadplatforme/css/accueil.css')}}" rel="stylesheet">

{% endblock %}

{% block baniere %}

    <div class="container-fluid ca">
        <!-- Indicators -->
        <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="10000">
            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                {% for wrapper in carousel if wrapper.active %}
                    <div class="item {% if loop.first %} active {% endif %}">
                        <img src="{{ vich_uploader_asset(wrapper, 'fichier')| imagine_filter ( 'ban3' ) }}" alt="{{ wrapper.titre }}" />
                        <div class="carousel-caption d-none d-md-block">
                            <h3>{{ wrapper.titre }}</h3>
                            <p>{{ wrapper.description }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="fa fa-angle-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="fa fa-angle-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
            {#        <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                    </ol>#}
        </div>
    </div>

{% endblock %}

{% block lescadplatforme_body %}

    <div class="container-fluid">
        <div class="row">
            <div class="callout-dark fade-in-b">
                <div class="container">
                    <h1> <b>SOUTIEN SCOLAIRE</b> </h1>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            {% for index, service in sss if index < 3  %}
                <div class="col-md-4 col-sm-6">
                    <div class="single-blog-item">
                        <div class="blog-thumnail">
                            {% if service.nomImage %}
                                <img src="{{ vich_uploader_asset(service, 'fichierImage') }}" alt="{{ service.nom }}" />
                            {% else %}
                                <img src="http://hpservicecenterschennai.in/images/hp_laptop_service_centers_in_guindy.png" alt="dsadas" />
                            {% endif %}
                            {# <a href=""><img src="http://via.placeholder.com/370x275" alt="blog-img"></a>#}
                        </div>
                        <div class="blog-content">
                            <h4><a href="{{ path('lescadplatforme_sss', { 'sssSlug': service.slug }) }}">{{ service.nom }}</a></h4>
                            <p>{{ service.description|truncate(130, true, " ...") }}</p>
                            <a href="{{ path('lescadplatforme_sss', { 'sssSlug': service.slug }) }}" class="more-btn">Détails</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="callout-dark fade-in-b">
                <div class="container">
                    <h1> <b>FORMATIONS</b> </h1>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            {% for formation in formations if formation.avant %}
                <div class="col-md-4 col-sm-6">
                    <div class="single-blog-item">
                        <div class="blog-thumnail">
                            {% if formation.nomImage %}
                                <img src="{{ vich_uploader_asset(formation, 'fichierImage') }}" alt="{{ formation.nom }}" />
                            {% else %}
                                <img src="http://hpservicecenterschennai.in/images/hp_laptop_service_centers_in_guindy.png" alt="dsadas" />
                            {% endif %}
                            {#<a href=""><img src="http://via.placeholder.com/370x275" alt="blog-img"></a>#}
                        </div>
                        <div class="blog-content">
                            <h4><a href="{{ path('lescadplatforme_formation', { 'formationSlug': formation.slug }) }}">{{ formation.nom|upper }}</a></h4>
                            <p>{{ formation.description|truncate(130, true, " ...") }}</p>
                            <a href="{{ path('lescadplatforme_formation', { 'formationSlug': formation.slug }) }}" class="more-btn">Détails</a>
                        </div>
                        <span class="blog-date">{{ formation.dureereel }}</span>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('bundles/lescadplatforme/js/index.js')}}" type="text/javascript"></script>
{% endblock %}