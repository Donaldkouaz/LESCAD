{% extends "lescadplatformeBundle::layout.html.twig" %}

{% block titre %}
    Faire une suggestion - {{ parent() }}
{% endblock %}

{% block css %} 
    {{ parent()}} <link href="{{asset('bundles/lescadplatforme/css/suggestion.css')}}" rel="stylesheet">
{% endblock %}

{% block lescadplatforme_body %}
    <div class="container-fluid">

        <div class="row">

            <div class="col-md-3 col-sm-4 prin">


                {% block userleft %}
                {% endblock userleft %}
            </div>


            <div class="col-sm-8 col-md-6 prin">
                {#<h2 class="title">Parcourez toutes nos formations</h2>#}

                {% if app.request.hasPreviousSession %}
                    {% for type, messages in app.session.flashbag.all() %}
                        {% for message in messages %}
                            <div class="flash-{{ type }}">
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                {% endif %}


                <div class="well">
                    <div class="page-header">
                        <h1> Faire une suggestion </h1>
                    </div>
                    {{ form(form) }}

                </div>

            </div>


            <div class="col-md-3 hidden-sm hidden-xs  prin">

            </div>

        </div>
    </div>
{% endblock %}