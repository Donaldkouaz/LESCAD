{# src/lescad/userBundle/Resources/views/layout.html.twig #}

{% extends "lescadplatformeBundle::layout.html.twig" %}

{% block titre %}
{{ parent() }}
{% endblock %}

{% block css %} {{ parent()}} <link href="{{asset('bundles/lescadplatforme/css/accueil.css')}}" rel="stylesheet">
{% endblock %}

{% block lescadplatforme_body %}

    <div class="container-fluid">

      <div class="row">
        
        <div class="col-md-3 col-sm-4 prin">
        
        {% block userleft %}
		
        {% endblock userleft %}
        </div>


        <div class="col-sm-8 col-md-6 prin">
        

        {% if app.request.hasPreviousSession %}
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="flash-{{ type }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endif %}

        <div>
        {# On définit ce block, dans lequel vont venir s'insérer les autres vues du bundle #}
  {% block fos_user_content %}
  {% endblock fos_user_content %}
        </div>
        </div>

        <div class="col-md-3 hidden-sm hidden-xs  prin">
          
          {% block userright %}
        {% endblock userright %}
        </div>

      </div>
    </div>

{% endblock %}

