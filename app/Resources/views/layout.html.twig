{# src/Affsducoin/PlatformBundle/Resources/views/layout.html.twig #}

{% trans_default_domain 'FOSUserBundle' %}

<!DOCTYPE html>
<html lang="fr">
    <head>
        <title>{% block titre %}Les Cours A Domicile{% endblock %}</title>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        {% block css %}
            <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
            {% stylesheets filter='cssrewrite, scssphp'
            'css/globale.css'
            'css/font-awesome.css' %}
            <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
            {% endstylesheets %}
        {% endblock %}

        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>
    <body>
        <div class="page">
            <header class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="{{path('lescadplatforme_accueil')}}">LESCAD</a>
                    </div>
                    <div id="navbar" class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li><a class="men" href="{{path('lescadplatforme_accueil')}}">ACCUEIL</a></li>
                            <li><a href="{{path('lescadplatforme_ss')}}">SOUTIEN SCOLAIRE</a></li>
                            <li><a href="{{path('lescadplatforme_formations')}}">FORMATION</a></li>
                            <li><a href="{{path('lescadplatforme_demande_cours')}}">DEMANDER UN COURS</a></li>
                        </ul>
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                            <ul class="nav navbar-nav navbar-right">
                                <li class="dropdown">
                                    <a href="#" data-toggle="dropdown" class="dropdown-toggle menuHaut"><span class="glyphicon glyphicon-user"></span>  {{ app.user.username }} <b class="caret"></b></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="{{ path('sonata_admin_dashboard') }}">Tableau de bord</a></li>
                                        <li><a href="{{ path('fos_user_profile_show') }}">Mon profil</a></li>
                                        <li class="divider"></li>
                                        <li><a href="{{ path('fos_user_security_logout') }}">Déconnexion</a></li>
                                    </ul>
                                </li>
                            </ul>
                        {#{% else %}
                            <ul class="nav navbar-nav navbar-right">

                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><b>Connexion</b></a>
                                    <ul id="login-dp" class="dropdown-menu">
                                        <li>

                                            <div class="row">
                                                <div class="col-md-12">
                                                    Se connecter à partir de :
                                                    <div class="social-buttons">
                                                        <a href="#" class="btn btn-fb"><i class="fa fa-facebook"></i> Facebook</a>
                                                        <a href="#" class="btn btn-tw"><i class="fa fa-twitter"></i> Twitter</a>
                                                    </div>

                                                    <form class="form" role="form" method="post" action="{{ path("fos_user_security_check") }}" accept-charset="UTF-8" id="login-nav">
                                                        <div class="form-group">
                                                            <label class="sr-only" for="username">{{ 'security.login.username'|trans }}</label>
                                                            <input type="text" class="form-control" placeholder="Nom d'utilisateur" id="username" name="_username" required="required" />
                                                        </div>
                                                        <div class="form-group">
                                                            <label class="sr-only" for="password">{{ 'security.login.password'|trans }}</label>
                                                            <input type="password" class="form-control" placeholder="Mot de passe" id="password" name="_password" required="required" />
                                                            <div class="help-block text-right"><a href="">J'ai oublié mon mot de passe</a></div>
                                                        </div>
                                                        <div class="form-group">
                                                            <button type="submit" class="btn btn-primary btn-block" id="_submit" name="_submit">{{ 'security.login.submit'|trans }}</button>
                                                        </div>
                                                        <div class="checkbox">
                                                            <label> <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'security.login.remember_me'|trans }} </label>
                                                        </div>
                                                    </form>
                                                </div>
                                                <div class="bottom text-center">
                                                    Pas de compte ? <a href="#"><b>Inscription</b></a>
                                                </div>
                                            </div>
                                        </li>
                                    </ul>
                                </li>
                                <li><a href="{{ path('fos_user_registration_register') }}">Inscription</a></li>
                            </ul>#}
                        {% endif %}
                    </div><!--/.navbar-collapse -->
                </div>
            </header>
            <div class="content">
                {% block body %}
                {% endblock %}
            </div>
            <footer class="footer">     

                <section class="index-link">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="link-area">
                                    <h3>A PROPOS DE NOUS</h3>
                                    <p class="apropos">LESCAD est une agence ayant pour objectif principal de faciliter tout processus d'apprentissage. Vous pouvez facilement trouver le prof qui vous convient proche de chez vous au Bénin</p>
                                    <div class="row">
                                        <div class="sicon">

                                            <div class="col-xs-3 text-center">
                                                <div class="icon-circle">
                                                    <a href="https://www.facebook.com/Lescad/" class="ifacebook" title="Facebook"><i class="fa fa-facebook"></i></a>
                                                </div>
                                            </div>

                                            <div class="col-xs-3 text-center">
                                                <div class="icon-circle">
                                                    <a href="https://twitter.com/LesCADbenin" class="itwittter" title="Twitter"><i class="fa fa-twitter"></i></a>
                                                </div>
                                            </div>

                                            <div class="col-xs-3 text-center">
                                                <div class="icon-circle">
                                                    <a href="https://plus.google.com/u/0/107729459051576392959" class="igoogle" title="Google+"><i class="fa fa-google-plus"></i></a>
                                                </div>
                                            </div>

                                            <div class="col-xs-3 text-center">
                                                <div class="icon-circle">
                                                    <a href="https://linkedin.com/company/lescad" class="iLinkedin" title="Linkedin"><i class="fa fa-linkedin"></i></a>
                                                </div>
                                            </div>

                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="link-area">
                                    <h3>SOUTIENS SCOLAIRES</h3>
                                    <ul>
                                        <li><a href="#"> Renforcement à domicile</a></li>
                                        <li><a href="#"> Travaux dirigés</a></li>
                                        <li><a href="#"> Conseils et orientations</a></li>
                                        <li><a href="#"> Suivi</a></li>

                                    </ul>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="link-area">
                                    <h3>FORMATIONS</h3>
                                    <ul>
                                        <li><a href="#"> Informatique</a></li>
                                        <li><a href="#"> BTP (Modélisation)</a></li>
                                        <li><a href="#"> Graphisme</a></li>
                                        <li><a href="#"> Autres</a></li>

                                    </ul>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="link-area">
                                    <h3>NOUS CONTACTER</h3>
                                    <ul>
                                        <li><a href="{{path('lescadplatforme_demande_cours')}}"> Demander un cours</a></li>
                                        <li><a href="{{path('lescadplatforme_recrutement')}}"> Devenir enseignant</a></li>
                                        <li><a href="{{path('lescadplatforme_serviceclient')}}"> Service client</a></li>
                                        <li><a href="{{path('lescadplatforme_suggestion')}}"> Faire une suggestion</a></li>

                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <section class="index-social">
                    <div class="container">
                        <div class="row index-social-link text-center">
                            <p class="copy-c">Copyright © 2017 LESCAD. All Rights Reserved.</p>
                        </div>
                    </div>
                </section>
            </footer>

        </div>
        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        {% endblock %}
    </body>
</html>
